<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_heard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心雨"
            android:textColor="#e00f"
            android:textSize="15sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#6444"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等级："
            android:textColor="#6444"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_militaryRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三级军士长"
            android:textColor="#6444"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_loushu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="18楼"
        android:textColor="#6444"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_comtent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="向百发百中导弹旅:官兵致敬。"
        android:textColor="#444"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_comtent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="6小时前"
        android:textColor="#6444"
        android:textSize="12sp" />

</RelativeLayout>