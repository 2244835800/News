<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/ic_deafult_pic">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <!--headImage-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView_show"
            android:layout_width="110dp"
            android:layout_height="110dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:backgroundImage="@null"
            fresco:overlayImage="@null"
            fresco:placeholderImage="@mipmap/ic_user"
            fresco:pressedStateOverlayImage="@color/window_background"
            fresco:retryImageScaleType="centerCrop"
            fresco:roundAsCircle="false"
            fresco:roundedCornerRadius="180dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="账号名称"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>