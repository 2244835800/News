<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="中国海军军事演习 新入列神盾舰火力全开"
        android:textColor="#f444"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_picOne"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_below="@id/tv_title"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iv_picTwo"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_below="@id/tv_title"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/iv_picOne"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iv_picThr"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_below="@id/tv_title"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/iv_picTwo"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_picTwo"
        android:layout_marginTop="8dp"
        android:text="18分钟前"
        android:textColor="#a444"
        android:textSize="13sp" />

</RelativeLayout>